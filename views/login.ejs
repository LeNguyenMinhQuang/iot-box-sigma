<%- include('layout', {
  title: title,
  body: `
    <div class="card">
      <h1>Đăng nhập</h1>
      <form id="loginForm" method="POST" action="/login" class="form">
        <label for="employeeCode">Mã nhân viên</label>
        <input
          id="employeeCode"
          name="employeeCode"
          type="text"
          value="${lastCode || ''}"
          placeholder="VD: NV00123"
          required
          autofocus
        />
        <button type="submit">Gửi</button>
      </form>

      ${error ? `<p class="error">${error}</p>` : ''}
    </div>
  `
}) %>

